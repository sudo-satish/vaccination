extends ../layouts/layout

block content    
    div.container
        div.container
            div.row
                div.col
                    span #{customer.clientName}
                div.col  
                    span #{customer.name}
                div.col  #{customer.phoneNumber}
            div.row
                div.col  #{customer.dob}
                div.col  #{customer.childName}
                div.col  #{customer.emailId}
            div.row
                div.col  #{customer.days} Days
                div.col 
                div.col
        div.container
            ul.list-group 
                each disease,i in diseaseArr
                        a.list-group-item.list-group-item-action.flex-column.align-items-start(href="disease/"+disease.id+"")
                            div.d-flex.w-100.justify-content-between
                                h5.mb-1 #{disease.shortDesc}
                                small #{disease.months} months ago
                            p.mb-1 #{disease.desc}
                            small #{disease.doctors.name}
                        li.disease-link.list-group-item.d-flex.justify-content-between.align-items-center( onClick= 'alert('+disease.id+');') #{disease.shortDesc} 
                            //span.badge.badge-primary.badge-pill #{disease.id} 
                            //i.material-icons link
                            i.material-icons open_in_new
                